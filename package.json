{
  "name": "valtio-kit",
  "description": "Valtio enhanced with Vite superpowers",
  "type": "module",
  "version": "0.1.22",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./react": {
      "types": "./react/dist/index.d.ts",
      "default": "./react/dist/index.js"
    },
    "./vite": {
      "types": "./dist/vite/plugin.d.ts",
      "default": "./dist/vite/plugin.js"
    },
    "./transform": {
      "types": "./dist/transform/index.d.ts",
      "default": "./dist/transform/index.js"
    },
    "./debug": {
      "types": "./dist/debug.d.ts",
      "default": "./dist/debug.js"
    },
    "./globals": {
      "types": "./globals.d.ts",
      "default": "./globals.js"
    },
    "./runtime": {
      "types": "./dist/runtime/index.d.ts",
      "default": "./dist/runtime/index.js"
    }
  },
  "files": [
    "dist",
    "*.d.ts",
    "react/dist"
  ],
  "license": "MIT",
  "author": "Alec Larson",
  "repository": {
    "type": "git",
    "url": "https://github.com/aleclarson/valtio-kit.git"
  },
  "prettier": "@alloc/prettier-config",
  "scripts": {
    "prepublishOnly": "pnpm -r build",
    "dev": "pnpm -r build --sourcemap && pnpm --parallel build:dev",
    "build": "rimraf dist && tsup",
    "build:dev": "watchlist src tsup.config.ts tsconfig.json -- tsup --sourcemap",
    "lint": "tsc-lint",
    "test": "vitest"
  },
  "devDependencies": {
    "@aleclarson/watchlist": "^0.3.3",
    "@alloc/prettier-config": "^1.0.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.3",
    "git-cliff": "^2.7.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "radashi": "^12.3.0",
    "react": "^19.0.0",
    "rimraf": "^6.0.1",
    "tinyspawn": "^1.3.3",
    "tsc-lint": "^0.1.8",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "valtio": "^2.1.2",
    "valtio-kit": "link:",
    "vite": "^6.1.0",
    "vitest": "^3.0.5"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^8.19.1",
    "@typescript-eslint/utils": "^8.19.1",
    "@typescript-eslint/visitor-keys": "^8.22.0",
    "magic-string": "^0.30.17"
  },
  "peerDependencies": {
    "react": "*",
    "valtio": "*",
    "vite": "*"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  }
}
